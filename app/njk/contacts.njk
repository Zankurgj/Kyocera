{% extends "app/njk/layout/main.njk" %}
{% block content %}
  <div class="container">
    {% from "app/njk/macro.njk" import breadcrumbs %}
    {{ breadcrumbs([['Контакты']]) }}
  </div>
  <div class="page-contacts">
    <h3 class="h3-base page-contacts-h3 text-center">Контакты</h3>
    <div class="container container--contacts">
      <div class="row row--contacts row--wrap">
        <div class="contacts-col">
          <div class="contacts-item">
            <img src="./images/dest/icons/phone.svg" alt="phone" class="contacts-item-img">
            <div class="contacts-item-text-wrapper">
              <p class="contacts-item-title">Телефон</p>
              <a href="tel:8 800 000 77 77" class="contacts-item-text">8 800 000 77 77</a>
            </div>
          </div>
        </div>
        <div class="contacts-col">
          <div class="contacts-item">
            <img src="./images/dest/icons/email.svg" alt="email" class="contacts-item-img">
            <div class="contacts-item-text-wrapper">
              <p class="contacts-item-title">Email</p>
              <a href="mailto:info@shop.ru" class="contacts-item-text">info@shop.ru</a>
            </div>
          </div>
        </div>
        <div class="contacts-col">
          <div class="contacts-item">
            <img src="./images/dest/icons/adress.svg" alt="address" class="contacts-item-img">
            <div class="contacts-item-text-wrapper">
              <p class="contacts-item-title">Адрес</p>
              <p class="contacts-item-text">г. Москва ул. Пушкина
                <br>
                д 21/75, 2 этаж</p>
            </div>
          </div>
        </div>
      </div>
      <div class="contacts-maps">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2253.5233968596317!2d37.208346416592285!3d55.610307980515564!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46b556dba7d7046f%3A0x6a5394c51327c35a!2z0YPQuy4g0J_Rg9GI0LrQuNC90LAsIDIxLCDQnNC-0YHQutCy0LAsIDE0MzM1MA!5e0!3m2!1sru!2sru!4v1609133016103!5m2!1sru!2sru" width="800" height="600" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
      </div>

    </div>

  </div>
{% endblock %}
{% extends "app/njk/layout/main.njk" %}
{% block content %}
  <div class="page-product">
    <div class="container">
      {% from "app/njk/macro.njk" import breadcrumbs %}
      {{ breadcrumbs([['Каталог'],['МФУ'],['Ecosys 2035 cdn']]) }}
    </div>
    <div class="container container--page-product page-product-inner">
      <div class="row row--wrap">
        <div class="product-slider-col">
          <div class="product-slider-main">
            {% for i in range(0, 6) %}

              {% if i === 1 %}
                <div class="product-slide-main product-slide-main--video">
                  <div class="product-slide-main-item product-slide-main-item--video">
                    <video class="product-slide-main-item-video" preload="auto" loop="loop" muted="muted" playsinline="playsinline" width="700">
                      <source type="video/mp4" src="./video/sample_video.mp4">
                      Your browser doesn't support HTML5 video tag.
                    </video>
                  </div>
                </div>
              {% else %}
                <div class="product-slide-main">
                  <div class="product-slide-main-item" style="background-image: url('./images/dest/img/product_slide.png');"></div>
                </div>
              {% endif %}
              {% endfor%}
            </div>
            <div class="product-slider-nav slider--middel-arrow">
              {% for i in range(0, 6) %}
                <div class="product-slide-nav">
                  <div class="product-slide-nav-item" style="background-image: url('./images/dest/img/product_slide.png');"></div>
                </div>
                {% endfor%}
              </div>
            </div>
            <div class="product-description-col">
              <p class="product-description-title">Цветное МФУ Ecosys 2035 cdn</p>
              <div class="product-description-cost">
                <p class="product-description-current-cost">
                  <span>12 500</span>₽
                </p>
                <p class="product-description-old-wrappper">
                  <span class="product-description-badge">Акция -10%</span>
                  <span class="product-description-old-cost">15 500
                  </span>
                </p>
              </div>
              <div class="product-description-list">
                <p class="product-description-list-title">Коротко о товаре:</p>
                <ul>
                  <li>
                    <span>До 35 страниц формата А4 в минуту</span></li>
                  <li>
                    <span>Время выхода первой копии - 6,9 сек.</span></li>
                  <li>
                    <span>Качество печати - 1 200 точек на дюйм</span></li>
                  <li>
                    <span>Дуплекс для экономичной двусторонней печати</span></li>
                  <li>
                    <span>Возможность копирования двусторонних ID-карт на одной странице</span></li>
                  <li>
                    <span>Компактный дизайн и низкий уровень шума</span></li>
                  <li>
                    <span>Исключительно низкие затраты на печать в своем классе</span></li>
                </ul>
              </div>
              <a href="#" class="btn btn--orange product-description-btn">Купить</a>
            </div>
          </div>
        </div>
        <div class="container container--page-product page-product-tabs-block">
          <h3 class="h3-base page-product-tabs-block-h3 text-center">Характеристики</h3>
          <div class="page-product-tabs">
            <div class="page-product-tabs-title-block">
              {% set tabsItem= [['Описание', '#productTab1'],['Общие','#productTab2'],['Обработка бумаги','#productTab3'],['Печать','#productTab4'],['Копирование','#productTab5'],['Сканирование','#productTab6'],['Факс','#productTab7']]%}
              {% for text, tabId in tabsItem %}
                <label class="product-tab-title-item">
                  {% if loop.first %}
                    <input type="radio" checked="checked" class="product-tab-input js-tab-input" name="productTab" tabid="{{tabId}}" onchange="onShowTab(this)">
                  {% else %}
                    <input type="radio" class="product-tab-input js-tab-input" name="productTab" tabid="{{tabId}}" onchange="onShowTab(this)">
                  {% endif %}
                  <span class="product-tab-title">{{text}}</span>
                </label>
              {% endfor %}
            </div>
            <div class="page-product-tabs-inner">
              <div class="page-product-tabs-item" data-tab-name="productTab" id="productTab1">
                <p class="base-text">
